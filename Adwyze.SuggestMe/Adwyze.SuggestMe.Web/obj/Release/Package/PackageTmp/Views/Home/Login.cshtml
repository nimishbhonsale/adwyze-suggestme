
@{
    ViewBag.Title = "Search";
}
@using(Html.BeginForm("GetByName","Artist"))
{
    <div style="margin-top: 100px;text-align: center;position:relative;vertical-align: middle;border:0px;">
        <img src="~/Content/images/logo.png" style="height:45px;width:180px;"><br/><br />
        @Html.TextBox("name",null,new {@style="width:400px;line-height: 1.5;", @placeholder="Enter the name of an Artist"})<br/>
        @if (Session["UserId"] != null && !string.IsNullOrEmpty(Session["UserId"].ToString())){
            <a href="@Url.Action("Get", "History")" id="history" style="font-size: 13px; margin-left: 360px; text-decoration: none;" tabindex=-1>History</a>
        }
        <br />
        <input type="submit" value="Search" style="width:100px;" accesskey="Enter" onclick="return validate();"/>
    </div>
    <script>
        $('#name').focus();

        var validate = function() {
            return ($('#name').val() != '');
        }
    </script>
}